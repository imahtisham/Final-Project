@page
@model Iportfilo.Pages.myadmin.showservicecshtmlModel
@{
}
<div class="container">
    <div class="row" justify-content-center>
        <div class="col-md-10">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col"> Title </th>
                        <th scope="col">IconsName</th>
                        <th scope="col" colspan="2"> Action </th>
                    </tr>
                </thead>
                <tbody>
                   @foreach(var item in Model.services)
                   {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Title</td>
                            <td>@item.IconeName</td>
                            <td>
                                <a class="btn btn-danger" asp-page-handler="Delete" asp-route-Id="@item.Id"> Delete</a>
                            </td>
                            <td>
                                <a class="btn btn-primary" asp-page=" editservice " asp-route-Id="@item.Id"> Update</a>
                            </td>
                        </tr>
                    
                        }
                </tbody>
            </table>
        </div>
    </div>

</div>