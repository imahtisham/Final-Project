@page
@model Iportfilo.Pages.myadmin.showskilModel
@{
}
<div class="container">
    <div class="row" justify-content-center>
        <div class="col-md-10">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nam</th>
                        <th scope="col">Percentage </th>
                        <th scope="col" colspan="2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.skills)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Name</td>
                            <td>@item.Percentage </td>
                            <td>
                                <a class="btn btn-danger" asp-page-handler="Delete" asp-route-Id="@item.Id"> Delete</a>
                            </td>
                            <td>
                                <a class="btn btn-primary" asp-page="editskil" asp-route-Id="@item.Id"> Update</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>

</div>