@page
@model Iportfilo.Pages.myadmin.showsocModel
@{
}
<div class="container">
    <div class="row" justify-content-center>
        <div class="col-md-10">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col"> Twiter </th>
                        <th scope="col">Facebook</th>
                        <th scope="col">Skype</th>
                        <th scope="col"> Instagram</th>
                        <th scope="col">LinkdIn</th>

                        <th scope="col" colspan="2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.socialNetwork)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Twiter</td>
                            <td>@item.Facebook</td>
                            <td>@item.skype</td>
                            <td>@item.Instagram</td>
                            <td>@item.Linkin</td>

                            <td>
                                <a class="btn btn-danger" asp-page-handler="Delete" asp-route-Id="@item.Id"> Delete</a>
                            </td>
                            <td>
                                <a class="btn btn-primary" asp-page="editsoc" asp-route-Id="@item.Id"> Update</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>

</div>